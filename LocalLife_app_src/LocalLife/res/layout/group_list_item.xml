<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="10.0dip"
    android:paddingBottom="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/color_dark_gray"
        android:ellipsize="marquee"
        android:id="@+id/coupon_description"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:lineSpacingExtra="8.0dip" />
    <ImageView
        android:id="@id/coupon_image"
        android:background="@drawable/picture_outline"
        android:layout_width="180.0dip"
        android:layout_height="135.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginRight="5.0dip"
        android:scaleType="fitXY"
        android:layout_below="@id/coupon_description"
        android:layout_alignParentLeft="true" />
    <TextView
        android:textSize="22.0sp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:gravity="center_vertical"
        android:id="@+id/sell_price"
        android:background="@drawable/group_price_bg"
        android:paddingRight="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/coupon_image"
        android:layout_alignTop="@id/coupon_image" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="#ff606060"
        android:id="@+id/coupon_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_toRightOf="@id/coupon_image"
        android:layout_below="@id/sell_price"
        android:lineSpacingExtra="10.0dip" />
</RelativeLayout>
