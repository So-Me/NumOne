<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:background="@android:color/darker_gray"
    >
    <ImageView
        android:id="@+id/coupon_image"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:src="@drawable/loading_fail_4_3"
        android:background="#ffff00ff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_margin="4dip"
        android:contentDescription="bala bala"
        />
    <TextView
        android:id="@+id/coupon_info_a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="-5dip"
        android:layout_toRightOf="@id/coupon_image"
        android:layout_alignParentTop="true"
        android:lineSpacingExtra="6dip"
        android:maxLines="2"
        android:textSize="16dip"
        android:textColor="#ff353535"
        android:text="This is a coupon infomation. Bala bala"
        />
    <TextView
        android:id="@+id/coupon_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/coupon_image"
        android:layout_below="@id/coupon_info_a"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fffb6a1d"
        android:text="price"
        />
    <TextView
        android:id="@+id/sold_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:lines="1"
        android:layout_toRightOf="@id/coupon_price"
        android:layout_alignBaseline="@id/coupon_price"
        android:textSize="14dip"
        android:textColor="#ff606060"
        android:text="sold num"
        />
    <Button
        android:id="@+id/coupon_tele_btn"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/coupon_image"
        android:layout_below="@id/coupon_price"
		android:layout_marginTop="10dip"
		android:background="@drawable/light_btn_selector"
        />


</RelativeLayout>