<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:orientation="vertical"
	android:background="@drawable/app_background"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
    	android:id="@+id/searchEditArea"
	android:background="@drawable/bg_search"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
        <EditText
        	android:textColorHint="#ffb9b9b9"
	android:id="@+id/searchEditText"
	android:background="@drawable/search_editor_bg"
	android:paddingLeft="10.0dip"
	android:focusable="true"
	android:focusableInTouchMode="false"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="5.0dip"
	android:layout_marginTop="5.0dip"
	android:layout_marginRight="5.0dip"
	android:hint="输入商户名、地址等"
	android:cursorVisible="false"
	android:singleLine="true"
	android:editable="false"
	android:drawableLeft="@drawable/search_icon"
	android:drawablePadding="5.0dip" />
    </LinearLayout>
    <GridView
    	android:gravity="center"
	android:id="@+id/icons"
	android:layout_width="fill_parent"
	android:layout_height="0.0dip"
	android:layout_marginTop="10.0dip"
	android:listSelector="#00000000"
	android:horizontalSpacing="10.0dip"
	android:verticalSpacing="@dimen/dimen_main_grid_spacing"
	android:stretchMode="columnWidth"
	android:numColumns="3"
	android:layout_weight="1.0" />
    <!--include
    	android:id="@id/bottomShowCase"
	android:layout_width="fill_parent"
	android:layout_height="@dimen/dimen_main_banner"
	layout="@layout/show_case_flipper" /-->
</LinearLayout>
